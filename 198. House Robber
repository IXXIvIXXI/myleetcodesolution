class Solution {
    public int rob(int[] nums) {
        if (nums.length < 2) {
            return nums[0];
        }
        
        int max1 = 0;
        int max2 = 0;
        
        for (int i = 0; i < nums.length; i++) {
            int temp = Math.max(max1 + nums[i], max2);
            max1 = max2;
            max2 = temp;
        }
        
        return max2;
    }
}
